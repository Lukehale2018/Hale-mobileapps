<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hale_finalexam_fall14.MainActivity"
    android:background = "#CCFF99" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editTextD"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"
            >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/buttonDollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dollars"
            android:onClick = "buttonDollarsClicked"
            />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editTextY"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"
             />

        <Button
            android:id="@+id/buttonYens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yens" 
            android:onClick = "buttonYensClicked"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editTextP"
            android:layout_weight="0.33"
            android:layout_height="wrap_content"
             />

        <Button
            android:id="@+id/buttonPounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pounds"
            android:onClick = "buttonPoundsClicked" />

    </TableRow>

</LinearLayout>
